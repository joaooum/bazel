py_binary(
    name = "runfiles-py",
    srcs = ["runfiles.py"],
    data = [
        "datadep/hello.txt",
        "//bar:bar-java",
        "//bar:bar-py",
        "//bar:bar-sh",
    ],
    main = "runfiles.py",
    deps = ["@bazel_tools//tools/runfiles:py-runfiles"],
)

java_binary(
    name = "runfiles-java",
    srcs = ["Foo.java"],
    data = [
        "datadep/hello.txt",
    ],
    main_class = "Foo",
    deps = ["@bazel_tools//tools/runfiles:java-runfiles"],
)

sh_binary(
    name = "runfiles-sh",
    srcs = ["foo.sh"],
    data = [
        "datadep/hello.txt",
        "//bar:bar-java",
        "//bar:bar-py",
        "//bar:bar-sh",
    ],
    deps = ["@bazel_tools//tools/bash/runfiles"],
)
